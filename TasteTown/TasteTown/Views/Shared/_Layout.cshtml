<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taste Town</title>
    <script type="importmap"></script>
    <link href="~/favicon.ico" rel="icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/UrbonRestro.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Taste Town</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item animated-underline">
                        <a class="nav-link" aria-current="page" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item animated-underline">
                        <a class="nav-link" asp-area="" asp-controller="Ingredient" asp-action="Index">Ingredients</a>
                    </li>
                    <li class="nav-item animated-underline">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Our_Menu</a>
                    </li>
                    <li class="nav-item animated-underline">
                        <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Create">Create_Order</a>
                    </li>
                </ul>
                <span class="navbar-text">
                    <form class="container-fluid justify-content-start">
                        <partial name="_LoginPartial"/>
                    </form>
                </span>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white pt-4 pb-2">
        <div class="container">
            <div class="row">
                <!-- Column 1 -->
                <div class="col-md-4">
                    <h5>About Us</h5>
                    <p>
                        We belive dining is more than just food, It`s an experience.
                        Our warm ambiance,elegant interiors, and attentive service create the perfect setting for family gatherings.
                    </p>
                </div>

                <!-- Column 2 -->
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-white text-decoration-none animated-underline" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="text-white text-decoration-none animated-underline" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li><a class="text-white text-decoration-none animated-underline" asp-area="" asp-controller="Product" asp-action="Index">Menu</a></li>
                        <li><a class="text-white text-decoration-none animated-underline" asp-area="" asp-controller="Ingredient" asp-action="Index">Ingredients</a></li>
                    </ul>
                </div>

                <!-- Column 3 -->
                <div class="col-md-4">
                    <h5>Follow Us</h5>
                    <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i></a>
                    <a href="https://github.com/mohitdubey3/" class="text-white me-3"><i class="bi bi-github"></i></a>
                    <a href="https://www.linkedin.com/in/mohitdubey3/" class="text-white"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>

            <!-- Copyright -->
            <div class="text-center mt-4">
                <p class="mb-0">© <strong>2025 - Taste Town.</strong> All rights reserved.</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
