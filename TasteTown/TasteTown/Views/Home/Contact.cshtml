@{
    ViewData["Title"] = "Contact Us";
}

<h2 class="bg-black text-white text-center">Welcome to @ViewData["Title"] Page</h2>

<section class="bg-dark text-white text-center py-5">
    <div class="container">
        <h2 class="display-5 fw-bold">Get in Touch & Reserve Your Table</h2>
        <p class="lead text-white-50">We craft delightful meals and memorable experiences. Reserve your spot now — walk-ins welcome!</p>
        <div class="d-flex justify-content-center gap-2 mt-3">
            <a href="#reservation" class="btn btn-light btn-lg">Reserve Online</a>
            <a href="tel:+918228002300" class="btn btn-light btn-lg">Call Us <i class="bi bi-telephone ms-2"></i></a>
        </div>
    </div>
</section>

<main class="container my-5">
    <div class="row g-4">
        <div class="col-lg-6">
            <h3 class="mb-3">Contact Information</h3>
            <p class="text-muted">Have a question or want to book a private event? Reach out and our team will respond shortly.</p>

            <div class="row gy-3">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body d-flex gap-3 align-items-center">
                            <i class="bi bi-geo-alt-fill fs-2 text-dark"></i>
                            <div>
                                <h6 class="mb-0">Address</h6>
                                <small class="text-muted">Dehri-On-Sone, Rohtas, Bihar, Pincode - 821307</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body d-flex gap-3 align-items-center">
                            <i class="bi bi-telephone-fill fs-2 text-dark"></i>
                            <div>
                                <h6 class="mb-0">Phone</h6>
                                <small class="text-muted">+91 82280 02300</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body d-flex gap-3 align-items-center">
                            <i class="bi bi-envelope-fill fs-2 text-dark"></i>
                            <div>
                                <h6 class="mb-0">Email</h6>
                                <small class="text-muted">mohitkdb@gmail.com</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Map -->
            <div class="mt-4">
                <h6 class="mb-2">Find Us</h6>
                <div class="ratio ratio-16x9 rounded shadow-sm overflow-hidden">
                    <<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3619.108469045638!2d84.16329267591!3d24.89428147790719!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x398daf003f3c5283%3A0x3261c6dca97371d3!2sResturant!5e0!3m2!1sen!2sin!4v1763107709070!5m2!1sen!2sin" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

        </div>

        <div class="col-lg-6">
            <h3 class="mb-3">Reserve a Table</h3>
            <p class="text-muted">Quickly reserve a table online. We'll confirm availability via email or phone.</p>

            <div id="reservation" class="card shadow-sm">
                <div class="card-body">
                    <form id="reservationForm" class="row g-3 needs-validation" novalidate>
                        <div class="col-md-6">
                            <label for="resName" class="form-label">Full name</label>
                            <input type="text" class="form-control" id="resName" placeholder="Your name" required>
                            <div class="invalid-feedback">Please enter your name.</div>
                        </div>

                        <div class="col-md-6">
                            <label for="resEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="resEmail" placeholder="you@example.com" required>
                            <div class="invalid-feedback">Please enter a valid email.</div>
                        </div>

                        <div class="col-md-6">
                            <label for="resPhone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="resPhone" placeholder="Phone number" required>
                            <div class="invalid-feedback">Please enter your phone number.</div>
                        </div>

                        <div class="col-md-3">
                            <label for="resDate" class="form-label">Date</label>
                            <input type="date" class="form-control" id="resDate" required>
                            <div class="invalid-feedback">Select a date.</div>
                        </div>

                        <div class="col-md-3">
                            <label for="resTime" class="form-label">Time</label>
                            <input type="time" class="form-control" id="resTime" required>
                            <div class="invalid-feedback">Select a time.</div>
                        </div>

                        <div class="col-md-4">
                            <label for="resPeople" class="form-label">People</label>
                            <select id="resPeople" class="form-select" required>
                                <option selected disabled value="">Choose...</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5+</option>
                            </select>
                            <div class="invalid-feedback">Select number of people.</div>
                        </div>

                        <div class="col-12">
                            <label for="resMessage" class="form-label">Special requests</label>
                            <textarea id="resMessage" class="form-control" rows="4" placeholder="Let us know any dietary requirements or requests"></textarea>
                        </div>

                        <div class="col-12 text-end">
                            <button class="btn btn-primary btn-lg" type="submit">Request Reservation</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4">
                <h6>Why reserve with us?</h6>
                <ul class="list-unstyled text-muted">
                    <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Farm-to-table fresh ingredients</li>
                    <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Curated seasonal menu</li>
                    <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Intimate atmosphere & attentive service</li>
                </ul>
            </div>

        </div>
    </div>
</main>