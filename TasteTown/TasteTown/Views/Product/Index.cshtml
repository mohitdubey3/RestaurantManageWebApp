@using TasteTown.Models
@model IEnumerable<Product>

@{
    ViewBag.Title = "Urbon Restaurant Menu Items ";
}

@functions{
    string GetDeleteModalId(Product prod)
    {
        return "#deleteModal" + prod.ProductId;
    }

    string GetModalId(Product prod)
    {
        return "deleteModal" + prod.ProductId;
    }

}

<h2 class="text-center my-4">Urbon Restaurant Menu Items</h2>

<div class="d-flex justify-content-center mb-4">
    <a asp-action="AddEdit" asp-controller="Product" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Item
    </a>
</div>

<div class="row g-4">
    @foreach (Product prod in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4">
            <form asp-action="Delete" asp-controller="Product" method="post">
                <input type="hidden" name="id" value="@prod.ProductId" />

                <div class="card h-100 shadow-sm">
                    <img src="@Url.Content("~/images/" + prod?.ImageUrl)"
                         class="card-img-top img-fluid"
                         alt="@prod.Description"
                         style="object-fit: cover; height: 200px;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@prod.Name</h5>
                        <p class="card-text text-muted">@prod.Description</p>
                        <p class="fw-bold">@prod.Price.ToString("C")</p>
                        <p class="text-secondary">Quantity In Stock: @prod.Stock</p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a class="btn btn-info btn-sm"
                               asp-controller="Product"
                               asp-action="AddEdit"
                               asp-route-id="@prod.ProductId">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>

                            <button type="button" class="btn btn-danger btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="@GetDeleteModalId(prod)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="@GetModalId(prod)" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Delete Confirmation</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete <strong>@prod.Name</strong>?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }
</div>